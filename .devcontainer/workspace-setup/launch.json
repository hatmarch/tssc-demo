{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug PSR",
            "type": "python",
            "request": "launch",
            "program": "${env:DEMO_HOME}/ploigos-step-runner/src/ploigos_step_runner/__main__.py",
            "console": "integratedTerminal", 
            "args": [
                "-s",
                "sign-container-image",
                "-c",
                "${env:DEMO_HOME}/test/test-config.yaml"
            ],
            "env":{
                "PYTHONPATH": "/workspaces/tssc-demo/ploigos-step-runner/src",
                "REKOR_REKOR_SERVER": "${env:REKOR_REKOR_SERVER}"
            },
            "preLaunchTask": "clean-results"
        },
        {
            "name": "Debug go file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "env": {},
            "args": [
                "serve",
                "--trillian_log_server.address=localhost",
                "--trillian_log_server.port=8090",
                "--rekor_server.address=0.0.0.0",
                "--redis_server.address=localhost",
                "--redis_server.port=6379",
                "--log_type=prod"
            ]
        },
        {
            "name": "Remote debug in Kubernetes",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 30123,
            "host": "localhost",
            "showLog": true,
            "apiVersion": 2,
            "substitutePath": [
                {
                    "to": "/opt/app-root/src/",
                    "from": "/workspaces/tssc-demo/rekor/"
                }
            ]
        },
        {
            "name": "Debug delve",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "env": {},
            "args": [
                "serve",
                "--trillian_log_server.address=localhost",
                "--trillian_log_server.port=8090",
                "--rekor_server.address=0.0.0.0",
                "--redis_server.address=localhost",
                "--redis_server.port=6379",
                "--log_type=prod"
            ]
        },
        {
            "name": "Debug rekor",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "/workspaces/tssc-demo/rekor/cmd/cli/main.go",
            //"program": "${file}",
            "env": {},
            "args": [
                "upload",
                "--rekor_server",
                "http://rekor-server-tssc-demo-rekor.apps.cluster-3627.3627.example.opentlc.com",
                "--signature",
                "/workspaces/tssc-demo/secrets/mysignature.asc",
                "--public-key",
                "/workspaces/tssc-demo/secrets/gpg_public_key",
                "--artifact"
                "/workspaces/tssc-demo/rekor/OWNERS.md"
            ]
        },
    ]
}